<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/lime_green">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDel"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_del_task"
        android:background="@color/lime_green"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/taskName"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/taskDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/taskDate"
        android:layout_below="@+id/taskName"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEdit"
        android:src="@drawable/btn_edit_task"
        android:background="@color/lime_green"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnComplete" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnComplete"
        android:src="@drawable/btn_complete_task"
        android:background="@color/lime_green"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnDel" />
</RelativeLayout>