<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/apple_green">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bob"
        android:id="@+id/petName"
        android:textColor="@color/rose_pink"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/pet" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pet"
        android:layout_below="@+id/petName"
        android:layout_alignParentStart="true"
        android:src="@drawable/henohenomoheji"
        android:layout_margin="16dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView"
        android:src="@drawable/icon_health"
        android:layout_alignTop="@+id/pet"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:src="@drawable/icon_hunger"
        android:layout_below="@+id/imageView"
        android:layout_toStartOf="@+id/moneyAmt" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/gridView"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:numColumns="auto_fit"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:stretchMode="spacingWidthUniform"
        android:columnWidth="120dp"
        android:background="@color/rose_pink"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/pet" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/icon_money"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Money Amount"
        android:id="@+id/moneyAmt"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Health Level"
        android:id="@+id/healthLevel"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fullness Level"
        android:id="@+id/fullnessLevel"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

</RelativeLayout>